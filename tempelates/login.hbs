    <form action="/log" method="post">
        <input placeholder="Url" name="url" type="text">
        <br>
        <input class="sub" type="submit">
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Domain</th>
                <th>Word Count</th>
                <th>Web Link</th>
                <th>Media Link</th>
            </tr>
        </thead>
